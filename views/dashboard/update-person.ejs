<html>
  <head>
    <meta charset='utf-8'>
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="manifest" href="/images/site.webmanifest">
  
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' media='screen' href='/stylesheets/style.css'>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">  
  </head>
  <body>
    <%- include('../partials/navbarAdmin') %> 
    <div class="made-container update-container">
      <h2 class="text-center action-title mb-5">Modifier de profil de :<br/> <%= person.first_name %> <%= person.last_name %> </h2>

      <form action="/dashboard/update-person" class=" mx-auto mt-5  create-form" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= person.id %>" />
        <div class="form-group d-flex">
          <div class="fifty">
            <label>Prénom</label>
            <input type="text" class="made-form" value="<%= person.first_name %>" name="first_name">
          </div>
          <div class="fifty">
            <label>Nom de Famille</label>
            <input type="text" class="made-form" value="<%= person.last_name %>" name="last_name" />
          </div>
        </div>
        <div class="form-group d-flex">
          <div class="fifty" >
            <label>Rôle</label>
            <input type="text" class="made-form" value="<%= person.title %>" name="title">
          </div>
          <div class="fifty">
            <label>Email</label>
            <input type="text" class="made-form" value="<%= person.email %>" name="email">
          </div>
        </div>

        <div class="form-group hundred">
          <label>Description</label>
          <textarea class="made-form" value="<%= person.description %>" name="description"><%= person.description %>s </textarea>
        </div>

        <div class="fifty">
          <label>Photo principale</label><br/>
          <input type="file" name="image"/>
        </div> 

        <div class="hundred text-center">
          <a href="/dashboard/team" ><button class="btn btn-secondary text-white action-button">Annuler</button></a>
          <button class="btn btn-warning action-button text-white"> Modifier</button>
        </div>
      </form>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
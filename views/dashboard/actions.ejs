<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <link rel='stylesheet' type='text/css' media='screen' href='/stylesheets/style.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
  <title>Hoc Momento - Actions Culturelles</title>
</head>
<body>
  <%- include('../partials/navbarAdmin') %> 

  <div class="dashboard-container mx-auto">

    <img src="/images/action.png"  class="small-banner-photo" />
    <div class="small-banner">
      <h1 class="small-banner-title">ACTIONS CULTURELLES</h1>
    </div>


    <div class="cultural-actions">
    <%- include('./create-action') %> 

    <div class="separator col-12"></div>

      <div class="actions-list col-10 mx-auto">
      <% for (i=0; i< allActions.length; i++){ %>
        <div class="d-flex action-item ">
          <div class="fifteen">
            <div class="red"><%= allActions[i].place%></div> <br/>
            <div><%= allActions[i].period%></div>
            <div> <%= allActions[i].city  %>  </div> <br/>
            <div><%= allActions[i].title  %>  </div> <br/>
            <div>LIENS :</div>
            <% for ( j=0; j< allActions[i].links.length; j++) {%>       
                <a href="<%= allActions[i].links[j].link %>" class="black"><%- allActions[i].links[j].name %></a> <br/>
            <% } %> 
          </div>
          <div class="forty-five description-list"><%= allActions[i].description%></div>
          <div class="thirty"> <img src="<%=allActions[i].photo %>" class="photo-list"  /> </div>
          <div class="ten icon-column">
            <form action="/dashboard/delete-action" method="POST">
              <input type="hidden" name="id" value="<%= allActions[i].id%>"   />
              <button class="fas fa-trash-alt fa-2x red delete-button"></button>
            </form>
            <a href="/dashboard/update-action-gallery?id=<%= allActions[i].id%>" title="Gallerie photo"><i class="fas fa-camera fa-2x mt-1 ml-1 black"></i></a> 
            <a href="/dashboard/update-action?id=<%= allActions[i].id %>" title="Modifier l'action"><i class="far fa-edit fa-2x ml-1 yellow"></i></a>
          </div>
        </div>
      <br/> <br/>
      <div class="separator col-12 my-5"></div>

      <%}%>
    </div>

    </div>
  </div >
  <%- include('../partials/footer') %>
</body>
</html>
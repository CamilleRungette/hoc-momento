        <div class="form-group">
          <label>Lieu</label>
          <input type="text" class="made-form" value="<%= action.place %>" name="place">
        </div>
        <div class="form-group">
          <label>Titre</label>
          <input type="text" class="made-form" value="<%= action.title %>" name="title">
        </div>
        <div class="form-group">
          <label>PÃ©riode</label>
          <input type="text" class="made-form" value="<%= action.period %>" name="period">
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea class="made-form" value="<%= action.description %>" name="description"> </textarea>
        </div>
        <div>
          <label>Gallerie photos</label> <br/>
          <input type="file" name="images" multiple />
        </div>
        <div class="button-container mt-5">
          <button type="submit" class="btn btn-warning text-white action-button">Modifier </button>
        </div>
      </form>

    </div>
    <%- include('../partials/footer') %> 
  </body>
</html>
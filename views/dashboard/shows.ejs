<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
  <link rel="manifest" href="/images/site.webmanifest">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel='stylesheet' type='text/css' media='screen' href='/stylesheets/style.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
  <title>Hoc Momento - Spectacles</title>
</head>
<body>
  <%- include('../partials/navbarAdmin') %> 

  <div class="dashboard-container">
    <img src="/images/action.png"  class="small-banner-photo" />
    <div class="small-banner">
      <h1 class="small-banner-title black">SPECTACLES</h1>
    </div>


    <div class="cultural-actions">
    <%- include('./create-shows') %> 

    <div class="separator"></div>

      <div class="actions-list">
      <% for (i=0; i< allShows.length; i++){ %>
        <div class="form-flex action-item ninety">
          <div class="input-20">
            <div class="red"><%= allShows[i].title %></div> <br/>
              <% for (let j=0; j< allShows[i].period.length; j++) {%>
                  <div><%= allShows[i].period[j] %></div>
                  <div><%= allShows[i].place[j] %>, <%= allShows[i].city[j] %>  </div>
              <% } %>
              <br/>
              <% if (allShows[i].links) {%> 
              <div> <span class="red">LIENS :</span><br/>
                <% for (j=0; j< allShows[i].links.length; j++) {%>       
                    <a href="<%= allShows[i].links[j].link %>" class="black" target="_blank"><%- allShows[i].links[j].name %>(<%= allShows[i].links[j].type %>) </a> <br/>
                <% } %> 
              <% } %> 
              </div> <br/>
              <div>
                <span class="red">SOUTIENS: </span><br/>
                <% if (allShows[i].supports) {%> 
                  <ul>
                  <% for (let k=0; k < allShows[i].supports.length; k++) {%>
                    <li><%= allShows[i].supports[k].name %> </li>
                  <% } %> 
                  </ul>
                <% } %> 
              </div>
              <br/>
              <div>
                <span class="red">PARTENAIRES: </span><br/>
                <% if (allShows[i].partners) {%> 
                  <ul>
                  <% for (let k=0; k < allShows[i].partners.length; k++) {%>
                    <li><%= allShows[i].partners[k].name %> </li>
                  <% } %> 
                  </ul>
                <% } %> 
              </div> 

           </div>
          <div class="input-40 description-list"><%= allShows[i].description%></div>
          <div class="thirty"> <img src="<%= allShows[i].photo %>" class="photo-list"  /> </div>
          <div class="input-10 icon-column">
            <form action="/dashboard/delete-show" method="POST">
              <input type="hidden" name="id" value="<%= allShows[i].id%>"   />
            <button class="fas fa-trash-alt fa-2x red delete-button"></button>
            </form>
            <a href="/dashboard/update-show-gallery?id=<%= allShows[i].id%>" title="Galerie photo"><i class="fas fa-camera fa-2x mt-1 ml-1 black"></i></a>  
            <a href="/dashboard/update-show?id=<%= allShows[i].id %> " ><i class="far fa-edit fa-2x ml-1 yellow"></i></a>
            <i class="fas fa-arrow-down fa-2x grey increase" title="Agrandir"></i>
            <i class="fas fa-arrow-up fa-2x grey decrease" title="Rétrécir"></i>
          </div>
        </div>
      <br/> <br/>
      <div class="separator col-12 my-5"></div>
      <%}%>
    </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <script src="/javascripts/script4.js"></script>
</body>
</html>
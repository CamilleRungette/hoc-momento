<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel='stylesheet' type='text/css' media='screen' href='/stylesheets/style.css'>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
  <%- include('../partials/navbarAdmin') %> 

  <div class="dashboard-container mx-auto">
    <img src="/images/culturelle.png"  class="aaction-banner-photo" />
    <div class="aaction-banner">
      <h1 class="action-title">SPECTACLES</h1>
    </div>


    <div class="cultural-actions">
    <%- include('./create-shows') %> 

    <div class="separator col-12 my-5"></div>

      <div class="actions-list col-10 mx-auto mt-3">
      <% for (i=0; i< allShows.length; i++){ %>
        <div class="d-flex action-item ">
          <div class="col-2">
            <div class="red"><%= allShows[i].place%></div> <br/>
            <div><%= allShows[i].period%></div>
            <div> <%= allShows[i].city  %>  </div> <br/>
            <div><%= allShows[i].title  %>  </div>
          </div>
          <div class="col-6 description-list"><%= allShows[i].description%></div>
          <div class="col-3"> <img src="<%= allShows[i].photo %>" class="photo-list"  /> </div>
          <div class="m-auto icon-column">
            <form action="/dashboard/delete-show" method="POST">
              <input type="hidden" name="id" value="<%= allShows[i].id%>"   />
            <button class="fas fa-trash-alt fa-2x red delete-button"></button>
            </form>
            <a href="/dashboard/update-show-gallery?id=<%= allShows[i].id%>" title="Gallerie photo"><i class="fas fa-camera fa-2x mt-1 ml-1 black"></i></a>  
            <a href="/dashboard/update-show?id=<%= allShows[i].id %> " ><i class="far fa-edit fa-2x ml-1 yellow"></i></a>
          </div>
        </div>
      <br/> <br/>
      <%}%>
    </div>

    </div>
  </div >

  <%- include('../partials/footer')%>
</body>
</html>